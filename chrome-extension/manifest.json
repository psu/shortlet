{
  "manifest_version": 3,
  "version": "0.3",
  "name": "Shortlet",
  "action": {
    "default_icon": {
      "256": "./img/icon.png"
    },
    "default_title": "Shortlet"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}